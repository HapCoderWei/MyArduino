void WriteByte(char data) {
  int i;
  digitalWrite(pinCS, LOW);
  for(i = 8; i >= 1; i--) {
    digitalWrite(pinCLK, LOW);
    if(data&0x80) {
      digitalWrite(pinDIN, HIGH);
    }
    else {
      digitalWrite(pinDIN, LOW);
    }
    data = data<<1;
    digitalWrite(pinCLK, HIGH);
  }
}
void WriteData(char address, char dat) {
  digitalWrite(pinCS, LOW);
  WriteByte(address);
  WriteByte(dat);
  digitalWrite(pinCS, HIGH);
}
void Init(void) {
  pinMode(pinCLK, OUTPUT);
  pinMode(pinCS,  OUTPUT);
  pinMode(pinDIN, OUTPUT);
  
  WriteData(0x09, 0x00);
  WriteData(0x0a, 0x03);
  WriteData(0x0b, 0x07);
  WriteData(0x0c, 0x01);
  WriteData(0x0f, 0x00);
}

void setup(void) {
  delay(50);
  Init();
}
void loop(void) {
  char i, j;
  for(j = 0; j < 38; j++) {
    for(i = 1; i < 9; i++)
      WriteData(i, disp[j][i-1]);
    delay(1000);
  }
}
